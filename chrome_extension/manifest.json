{
  "manifest_version": 3,
  "name": "Chrome Page Summarizer Sender",
  "description": "Send the current page's title, URL, and content to the local Streamlit summarizer app.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
